<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="nl.saxion.calendar" >

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".model.CalendarApplication_"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity_"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name=".activities.BaseActivity_"
            android:label="@string/title_activity_material_view_pager" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.DetailsActivity"
            android:label="@string/title_activity_details" >
        </activity>
        <activity
            android:name=".activities.CustomizeActivity"
            android:label="@string/title_activity_customize" >
        </activity>
    </application>

</manifest>
