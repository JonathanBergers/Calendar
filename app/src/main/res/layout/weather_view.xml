<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:padding="5dp"

    android:elevation="2dp"
    >

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:id="@+id/LayoutMain"
        android:layout_alignParentTop="true">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/imageViewIcon"
            android:layout_weight="1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="City"

            android:layout_weight="1"
            android:id="@+id/textViewCity" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Its windy"

            android:layout_weight="1"
            android:id="@+id/textViewMessage" />



    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_below="@+id/LayoutMain"
        android:layout_alignParentStart="true"
        android:id="@+id/linearLayout">


        <com.rengwuxian.materialedittext.MaterialEditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:hint="Temp"
            app:met_floatingLabel="normal"
            android:text="10"
            android:singleLine="false"
            android:layout_weight="1"
            android:id="@+id/materialEditTextTemp" />

        <com.rengwuxian.materialedittext.MaterialEditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:hint="Humidity"
            app:met_floatingLabel="normal"
            android:text="100"
            android:singleLine="false"
            android:layout_weight="1"
            android:id="@+id/materialEditTextHumidity" />

        <com.rengwuxian.materialedittext.MaterialEditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:hint="Windspeed"
            app:met_floatingLabel="normal"
            android:text="10"
            android:singleLine="false"
            android:layout_weight="1"
            android:id="@+id/materialEditTextWindspeed" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linearLayout"
        android:layout_centerHorizontal="true">



        <com.rengwuxian.materialedittext.MaterialEditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:hint="Minimal Temp"
            app:met_floatingLabel="normal"
            android:text="10"
            android:singleLine="false"
            android:layout_weight="1"
            android:id="@+id/materialEditTextTempMin" />

        <com.rengwuxian.materialedittext.MaterialEditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:hint="Maximal Temp"
            app:met_floatingLabel="normal"
            android:text="10"
            android:singleLine="false"
            android:layout_weight="1"
            android:id="@+id/materialEditTextTempMax" />

        <com.rengwuxian.materialedittext.MaterialEditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:hint="Pressure"
            app:met_floatingLabel="normal"
            android:text="100"
            android:singleLine="false"
            android:layout_weight="1"
            android:id="@+id/materialEditTextPressure" />

    </LinearLayout>

</RelativeLayout>